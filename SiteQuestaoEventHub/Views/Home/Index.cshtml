@{
    ViewData["Title"] = "Search";
}

<div class="text-center">
    <h3>Microsoft Build 2022</h3>
    <h5>What technology do you like best?</h5>
    <br/>
    @Html.ActionLink(".NET", "VotoDotNet", "Votacao", null, new { @class = "btn btn-primary btn-xs" })
    @Html.ActionLink("Azure Functions", "VotoAzureFunctions", "Votacao", null, new { @class = "btn btn-success btn-xs" })
    @Html.ActionLink("ASP.NET Core", "VotoASPNETCore", "Votacao", null, new { @class = "btn btn-info btn-xs" })
    @Html.ActionLink("PowerShell", "VotoPowerShell", "Votacao", null, new { @class = "btn btn-danger btn-xs" })

    @if (!String.IsNullOrWhiteSpace((string)TempData["Voto"]))
    {
        <br/><br/>
        <p>Thanks for voting for: <b>@TempData["Voto"]</b></p>
    }
</div>
